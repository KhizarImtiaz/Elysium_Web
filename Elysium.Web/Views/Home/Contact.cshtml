@{
    ViewData["Title"] = "Contact";
}
<main>
    <section id="Banner" style="background-image: url(/images/contact-bnr-img.png)">
        <div class="container h-100 position-relative z-index-1">
            <div class="row align-items-center h-100 justify-content-center">
                <div class="col-md-10 text-center">
                    <h2 class="ArchivoMedium">
                        Get in touch with the <br />
                        <span class="ArchivoBlack">Elysium </span> team
                    </h2>
                    <p class="py-3 ArchivoExtraLight Fsize_24">
                        Let’s catch up over a cup of coffee or <br />
                        meet up in the virtual world!
                    </p>
                </div>
            </div>
        </div>
    </section>
    <section id="InnovateInspire">
        <div class="container">
            <div class="row justify-content-center align-items-center">
                <div class="col-md-10 text-center pb-5">
                    <h3 class="ArchivoBold Fsize_48">
                        Together We Can <br />
                        Innovate and Inspire People!
                    </h3>
                    <p class="RobotoLight Fsize_24">
                        Fill this up and gear up for a transformational journey with
                        us
                    </p>
                </div>
                <div class="d-flex justify-content-center">
                    <a href="" class="d-inline">
                        <div class="d-flex align-items-center join-btn me-2 ps-3">
                            <div class="pe-3">
                                <img src="/images/icon-docs.svg" alt="" />
                            </div>
                            <div>
                                <h5 class="Fsize_24 RobotoMedium">GENERAL CHAT</h5>
                                <h6 class="Fsize_16 RobotoRegular">Join the Discord</h6>
                            </div>
                        </div>
                    </a>
                    <a href="" class="d-inline">
                        <div class="d-flex align-items-center join-btn me-2 ps-3">
                            <div class="pe-3">
                                <img src="/images/icon-help.svg" alt="" />
                            </div>
                            <div>
                                <h5 class="Fsize_24 RobotoMedium">HELP CENTER</h5>
                                <h6 class="Fsize_16 RobotoRegular">
                                    Elysium support & help
                                </h6>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </section>
    <section id="ContactForm">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <form>
                        <h3 class="ArchivoBold Fsize_56 text-center pb-4">Contact Us</h3>
                        <div class="form-group">
                            <label for="exampleInputPassword1 Fsize_18 RobotoBold pb-2">Name</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter your full name">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1 Fsize_18 RobotoBold">Email</label>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter your email">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1 Fsize_18 RobotoBold">Company</label>
                            <input type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter your company name">
                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1 Fsize_18 RobotoBold">Message</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="8" placeholder="Enter your company name"></textarea>
                        </div>
                        <a class="BtnGreen text-uppercase py-2 px-3  rounded-pill d-inline-block" href="#">
                            SUBMIT
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </section>
</main>